import numpy as np
import random

noa = int(input("Number of type A particles at start: ")) # 1
nob = int(input("Number of type B particles at start: ")) # 2
noc = int(input("Number of type C particles at start: ")) # 3

leng = noa + nob + noc
counter = 0

master = np.ones(leng)

for i in range (nob):
    master[i+noa] = 2
for i in range (noc):
    master[i+noa+nob] = 3

while True:
    leng = len(master)
    part1 = random.randint(0, leng-1)
    part2 = random.randint(0, leng-1)

    no1 = master[part1]
    no2 = master[part2]
    counter += 1
    list1 = master.tolist()
    
    if (no1 != no2):
        new = 6 - no1 - no2
        master[part1] = new

        list1 = master.tolist()
        list1.remove(list1[part2])
        master = np.asarray(list1)
        
    if list1.count(list1[0]) == len(list1):
        break

print("\nEnd result below. Total number of collisions: ", counter)
print(master)


ones = 0.0
twos = 0.0
thrs = 0.0

for i in range (len(master)):
    if master[i] == 1.0:
        ones +=1
    if master[i] == 2.0:
        twos +=1
    if master[i] == 3.0:
        thrs +=1

print("\nNumber of 1s: ", ones)
print("Number of 2s: ", twos)
print("Number of 3s: ", thrs)


